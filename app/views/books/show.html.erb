
<main>
    <div class="container px-5 px-sm-0">
        <div class="row">
            <div class="col-md-3">
                    <h2>User info</h2>　<!--自分／投稿者の情報-->
                        <p><%= image_tag @user.get_profile_image(100,100) %></p>
                        <table class="table">
                            <tbody>
                                <!--<tr></tr>-->
                                <tr>
                                    <th>name</th>
                                    <th><%= @user.name %></th>
                                </tr>
                                <tr>
                                    <th>introduction</th>
                                    <th><%= @user.introduction %></th>
                                </tr>
                            </tbody>
                        </table>
                        <% if @user.id == current_user.id %>
                            <div class="row">
                                <a class="btn btn-outline-secondary btn-block" href="edit_user_path(@user)" ><i class="fa-solid fa-user-gear"></i></a>
                            </div>
                        <% end %>
                
                
                    
                    <h2 class="mt-3">New Book</h2>
                    <% if @book.errors.any? %>
                        <%= @book.errors.count %> errors prohibited this obj from being saved:
                        <ul>
                            <% @book.errors.full_messages.each do |message| %>
                              <li><%= message %></li>
                             <% end %>
                        </ul>
                    <% end %>
                    
                    <%= form_with model: @book, url: '/books', method: :post do |f| %>
                        <div class="form-group">
                            <label for="本のタイトル">Title</label>
                            <input class="form-control" type="text">
                            <!--%= f.text_field :title %>-->
                        </div>
                        <div class="form-group">
                            <label for="感想">Opinion</label>
                            <textarea class="form-control"></textarea>
                            <!--%= f.text_area :opinion %>-->
                        </div>
                        <div class="form-group">
                            <%= button_tag type: "submit", class: "btn btn-success" do %>
                              <p>Create Book</P>
                            <% end %>
                        </div>
                    <% end %>
            </div>

            <div class="col-md-8 offset-md-1">
                <h2>Books</h2>
                <table class="table table-hover table-inverse">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Title</th>
                            <th>Opinion</th>
                            <th colspan="3"></th>
                        </tr>
                    </thead>
                    <% @books.each do |book| %>  
                        <%= link_to post_image_path(post_image.id) do %>　<!--自分／投稿者の情報-->
                            <%= image_tag post_image.get_image %>
                        <% end %>
                        <tbody>
                            <tr>
                                <td><%= image_tag @book.user.get_iprofile_mage(100,100) %> <%= @user.name %></td>
                                <td><%= link_to @book.title, book_path(book.id) %></td>
                                <td><%= @book.body %></td>
                                <td><%= link_to "Edit", edit_book_path(book.id) %></td>
                                <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
                            </tr>
                        </tbody>
                    <% end %>
                </table>
            </div>
        </div>
    </div>
</main>

<%= render 'list', books: @books %>

<!--まだ作り途中だよ-->
<!--user_imageとuser_nameは同じtdっぽい-->
<!--.eachいる？一つの投稿じゃないの？-->
<!--%= user_nameのところは書き換え必要。もうちょっと指定しないと-->

<h2>Book detail</h2>
    <table>
        <% @books.each do |book| %>
            <tbody>
                <tr>
                    <td><%= image_tag book.get_image %> <%= user_name %></td>
                    <td><%= link_to book.title, book_path(book.id) %></td>
                    <td><%= book.body %></td>
                    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
                    <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
                </tr>
            </tbody>
        <% end %>
    </table>


<header>
    <nav class= "navbar navbar-expand-lg navbar-dark bg-dark">
        <div class= "container">
            <a class= "navbar-brand" href= "/">
                <span>Bookers</span>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
             </button>
        </div>
    </nav>
</header>

<main>
    <h2>User info</h2>
        <p><%= image_tag book.user.get_profile_image(100,100) %></p>
        <table>
            <tbody>
                <tr>
                    <th>name</th>
                    <th>名前: <%= book.user.name %></th>
                </tr>
                <tr>
                    <th>introduction</th>
                    <th>自己紹介文: <%= book.user.introduction%></th>
                </tr>
            </tbody>
        </table>
    <% end %>
        
    
    <h2>New Book</h2>
    <% if @book.errors.any? %>
        <%= @book.errors.count %> errors prohibited this obj from being saved:
        <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
             <% end %>
        </ul>
    <% end %>
    
    <%= form_with model: book, url: '/books', method: :post do |f| %>
        <label>Title</label>
        <%= f.text_field :title %>
        <label>Opinion</label>
        <%= f.text_area :body %>
    
        <%= f.submit 'Creat Book'%>
    <% end %>
    
    
    

<h2>Books</h2>
    <table>
        <thead>
            <tr>
                <th><%= image_tag 'default-image' %></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
            </tr>
        </thead>
            <tbody>
                <% @books.each do |book| %>
                <tr>
                    <td><%= image_tag book.get_image %></td>
                    <td><%= link_to book.title, book_path(book.id) %></td>
                    <td><%= book.body %></td>
                </tr>
                <% end %>
            </tbody>
    </table>

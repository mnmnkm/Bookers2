<%= render 'list', books: @books %>

    <h2>Books</h2>
    <% @books.each do |book| %>    
        <div class>
            <h2>Books</h2>
            <table>
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><%= image_tag book.get_image %></td>
                        <td><%= book.title %></td>
                        <td><%= book.body %></td>
                    </tr>
                </tbody>
            </table>
        </div>
    <% end %>
</main>
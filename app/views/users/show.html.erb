<header>
    <nav class= "navbar navbar-expand-lg navbar-dark bg-dark">
        <div class= "container">
            <a class= "navbar-brand" href= "/">
                <span>Bookers</span>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
             </button>
        </div>
    </nav>
</header>


<div>
  <%= flash[:notice] %>
</div>


<main>
    <h2>User info</h2>
        <p><%= image_tag @user.get_profile_image(100,100) %></p>
        <table>
            <tbody>
                <tr>
                    <th>name</th>
                    <th>名前: <%= @book.user.name %></th>
                </tr>
                <tr>
                    <th>introduction</th>
                    <th>自己紹介文: <%= @book.user.introduction%></th>
                </tr>
            </tbody>
        </table>
        <% if @user.id == current_user.id %>
            <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
        <% end %>


    
    <h2>New Book</h2>
    <% if @book.errors.any? %>
        <%= @book.errors.count %> errors prohibited this obj from being saved:
        <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
             <% end %>
        </ul>
    <% end %>
    
    <%= form_with model: @book, url: '/books', method: :post do |f| %>
        <label>Title</label>
        <%= f.text_field :title %>
        <label>Opinion</label>
        <%= f.text_area :opinion %>
    
        <%= f.submit 'Creat Book'%>
    <% end %>



<div>
    <h2>Books</h2>
    <table>
        <thead>
            <tr>
                <th><%= image_tag 'default-image' %></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <% @books.each do |book| %>  
            <%= link_to post_image_path(post_image.id) do %>
                <%= image_tag post_image.get_image %>
            <% end %>
            <tbody>
                <tr>
                    <td><%= image_tag book.user.get_profile_image(100,100) %></td>
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                </tr>
            </tbody>
        <% end %>
    </table>
</div>


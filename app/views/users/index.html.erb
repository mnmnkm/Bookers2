
<div>
  <%= flash[:notice] %>
</div>


<main>
    <h2>User info</h2>
        <p><%= image_tag @user.get_profile_image(100,100) %></p>
        <table>
            <tbody>
                <tr>
                    <th>name</th>
                    <th>名前: <%= @user.name %></th>
                </tr>
                <tr>
                    <th>introduction</th>
                    <th>自己紹介文: <%= @ser.introduction %></th>
                </tr>
            </tbody>
        </table>
        <% if @user.id == current_user.id %>
            <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
            <i class="fa-solid fa-user-gear"></i>
        <% end %>


    
    <h2>New Book</h2>
    <% if @book.errors.any? %>
        <%= @book.errors.count %> errors prohibited this obj from being saved:
        <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
             <% end %>
        </ul>
    <% end %>
    
    <%= form_with model: @book, url: '/books', method: :post do |f| %>
        <label>Title</label>
        <%= f.text_field :title %>
        <label>Opinion</label>
        <%= f.text_area :opinion %>
    
        <%= f.submit 'Creat Book'%>
    <% end %>

    <div>
        <h2>Users</h2>
        <table>
            <thead>
                <tr>
                    <th>image</th>
                    <th>name</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
                <tbody>
                    <tr>
                        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
                        <td><%= user.name %></td>
                        <td><%= link_to "Show" user_path(params[:id]) %></td>
                    </tr>
                </tbody>
            <% end %>
        </table>
    </div>
</main>
